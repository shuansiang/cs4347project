<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PianoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#545454"
    android:padding="0dp"
    tools:context="com.tetrastudio.VSDActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7e7e7e"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>

                <ImageButton
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#7e7e7e"
                    android:onClick="toVSDPage"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/logo"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/pianoContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <LinearLayout
                    android:id="@+id/whiteKeysContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/b"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/whitekeys" />

                    <Button
                        android:id="@+id/a"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/whitekeys" />

                    <Button
                        android:id="@+id/g"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/whitekeys" />

                    <Button
                        android:id="@+id/f"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/whitekeys" />

                    <Button
                        android:id="@+id/e"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/whitekeys" />

                    <Button
                        android:id="@+id/d"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/whitekeys" />

                    <Button
                        android:id="@+id/c"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/whitekeys" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="15.75">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:layout_weight="1.5"
                        android:visibility="invisible" />
                    <Button
                        android:id="@+id/a_sharp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:background="#000000" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:visibility="invisible" />
                    <Button
                        android:id="@+id/g_sharp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:background="#000000" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:visibility="invisible" />
                    <Button
                        android:id="@+id/f_sharp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:background="#000000" />

                    <Button
                        android:id="@+id/blankkey"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:layout_weight="2.9"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/d_sharp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:background="#000000" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:visibility="invisible" />
                    <Button
                        android:id="@+id/c_sharp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:background="#000000" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:layout_weight="1.0"
                        android:visibility="invisible" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/debugGrav"
            android:layout_height="80dp"
            android:layout_weight="0.55"
            android:enabled="false"
            android:text="TextView"
            android:layout_width="match_parent" />
    </FrameLayout>

</RelativeLayout>


